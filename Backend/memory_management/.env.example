# Memory Management API Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/
MEMORY_DB_NAME=gurukul
MEMORY_RETENTION_DAYS=365

# API Configuration
MEMORY_API_HOST=0.0.0.0
MEMORY_API_PORT=8003
MEMORY_API_RELOAD=false
MEMORY_API_WORKERS=1

# Authentication - API Keys (format: key1:user1,key2:user2)
MEMORY_API_KEYS=memory_api_key_dev:development_user,memory_api_key_prod:production_user,memory_api_key_test:test_user

# Rate Limiting
MEMORY_RATE_LIMIT_REQUESTS=1000
MEMORY_RATE_LIMIT_WINDOW=3600
MEMORY_RATE_LIMIT_BURST=100

# Security Configuration
MEMORY_MAX_SIZE_MB=100
MEMORY_CACHE_TTL=300

# Optional: Enhanced Features
# ENABLE_SEMANTIC_SEARCH=false
# ENABLE_MEMORY_COMPRESSION=false
# ENABLE_REAL_TIME_SYNC=false

# Optional: Redis Cache (if implementing caching)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=memory_api.log

# Development/Production Mode
ENVIRONMENT=development
