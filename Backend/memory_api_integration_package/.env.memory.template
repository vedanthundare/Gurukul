# Memory Management API Configuration Template
# Copy this file to your frontend project and rename to .env.local or .env
# Update the values according to your environment

# =============================================================================
# API Configuration
# =============================================================================

# Memory API Base URL (choose based on environment)
REACT_APP_MEMORY_API_BASE_URL=http://localhost:8003
# REACT_APP_MEMORY_API_BASE_URL=http://staging-api.gurukul.com:8003
# REACT_APP_MEMORY_API_BASE_URL=https://api.gurukul.com

# Memory API Authentication
REACT_APP_MEMORY_API_KEY=memory_api_key_dev
# For production, use a secure API key:
# REACT_APP_MEMORY_API_KEY=your_production_api_key_here

# API Request Configuration
REACT_APP_MEMORY_API_TIMEOUT=30000
REACT_APP_MEMORY_API_RETRY_ATTEMPTS=3
REACT_APP_MEMORY_API_RETRY_DELAY=1000

# =============================================================================
# Persona Configuration
# =============================================================================

# Default Personas for Different Domains
REACT_APP_DEFAULT_PERSONA_ID=financial_advisor
REACT_APP_GURUKUL_PERSONA_ID=gurukul_math_tutor
REACT_APP_KARMA_PERSONA_ID=karma_advisor
REACT_APP_VEDIC_PERSONA_ID=ask_vedas

# Financial Simulator Personas
REACT_APP_FINANCIAL_ADVISOR_PERSONA=financial_advisor
REACT_APP_INVESTMENT_COACH_PERSONA=investment_coach
REACT_APP_BUDGET_PLANNER_PERSONA=budget_planner
REACT_APP_RETIREMENT_ADVISOR_PERSONA=retirement_advisor

# Gurukul Education Personas
REACT_APP_MATH_TUTOR_PERSONA=gurukul_math_tutor
REACT_APP_SCIENCE_TUTOR_PERSONA=gurukul_science_tutor
REACT_APP_LANGUAGE_TUTOR_PERSONA=gurukul_language_tutor

# Karma & Vedic Personas
REACT_APP_KARMA_AGENT_PERSONA=karma_advisor
REACT_APP_VEDIC_SCHOLAR_PERSONA=ask_vedas
REACT_APP_SPIRITUAL_GUIDE_PERSONA=spiritual_advisor

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/Disable Memory Features
REACT_APP_ENABLE_MEMORY_STORAGE=true
REACT_APP_ENABLE_MEMORY_RETRIEVAL=true
REACT_APP_ENABLE_MEMORY_SEARCH=true
REACT_APP_ENABLE_CHAIN_OF_THOUGHT=true
REACT_APP_ENABLE_PERSONA_SUMMARIES=true

# Memory Storage Options
REACT_APP_AUTO_STORE_INTERACTIONS=true
REACT_APP_AUTO_STORE_PREFERENCES=true
REACT_APP_AUTO_STORE_USER_FACTS=true

# Memory Retrieval Options
REACT_APP_LOAD_CONTEXT_ON_SESSION_START=true
REACT_APP_PRELOAD_PERSONA_MEMORIES=true
REACT_APP_ENABLE_MEMORY_SUGGESTIONS=true

# =============================================================================
# Memory Configuration
# =============================================================================

# Default Memory Settings
REACT_APP_DEFAULT_MEMORY_IMPORTANCE=5
REACT_APP_MAX_MEMORY_CONTENT_LENGTH=10000
REACT_APP_DEFAULT_MEMORY_TAGS=general

# Context and Chain-of-Thought Settings
REACT_APP_DEFAULT_CONTEXT_LIMIT=5
REACT_APP_MAX_CONTEXT_LIMIT=20
REACT_APP_CHAIN_OF_THOUGHT_ENABLED=true

# Memory Search Settings
REACT_APP_DEFAULT_SEARCH_LIMIT=10
REACT_APP_MAX_SEARCH_LIMIT=50
REACT_APP_SEARCH_DEBOUNCE_DELAY=500

# Persona Memory Settings
REACT_APP_DEFAULT_PERSONA_MEMORY_LIMIT=20
REACT_APP_MAX_PERSONA_MEMORY_LIMIT=100

# =============================================================================
# Performance Configuration
# =============================================================================

# Caching Settings
REACT_APP_ENABLE_MEMORY_CACHE=true
REACT_APP_MEMORY_CACHE_TTL=300000
REACT_APP_PERSONA_CACHE_TTL=600000

# Request Optimization
REACT_APP_ENABLE_REQUEST_DEBOUNCING=true
REACT_APP_DEBOUNCE_DELAY=300
REACT_APP_ENABLE_REQUEST_BATCHING=false

# Pagination Settings
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# =============================================================================
# Development & Debugging
# =============================================================================

# Debug Mode
REACT_APP_MEMORY_DEBUG_MODE=false
REACT_APP_LOG_MEMORY_REQUESTS=false
REACT_APP_LOG_MEMORY_RESPONSES=false

# Development Features
REACT_APP_ENABLE_MEMORY_DEVTOOLS=false
REACT_APP_SHOW_MEMORY_STATS=false
REACT_APP_ENABLE_MEMORY_INSPECTOR=false

# Testing Configuration
REACT_APP_ENABLE_MOCK_MEMORY_API=false
REACT_APP_MOCK_API_DELAY=1000

# =============================================================================
# Error Handling & Monitoring
# =============================================================================

# Error Handling
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_MAX_RETRY_ATTEMPTS=3
REACT_APP_RETRY_BACKOFF_MULTIPLIER=2

# Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_ENABLE_USAGE_ANALYTICS=false

# =============================================================================
# Security Configuration
# =============================================================================

# Rate Limiting Awareness
REACT_APP_RATE_LIMIT_BUFFER=50
REACT_APP_ENABLE_RATE_LIMIT_WARNINGS=true

# Data Privacy
REACT_APP_ENABLE_DATA_ENCRYPTION=false
REACT_APP_ANONYMIZE_USER_DATA=false

# =============================================================================
# UI/UX Configuration
# =============================================================================

# Memory Display Settings
REACT_APP_SHOW_MEMORY_TIMESTAMPS=true
REACT_APP_SHOW_MEMORY_IMPORTANCE=true
REACT_APP_SHOW_MEMORY_TAGS=true
REACT_APP_SHOW_MEMORY_SOURCE=false

# Interaction Display
REACT_APP_SHOW_INTERACTION_METADATA=false
REACT_APP_SHOW_RESPONSE_TIME=false
REACT_APP_SHOW_CONFIDENCE_SCORES=false

# Context Display
REACT_APP_SHOW_CONTEXT_INDICATORS=true
REACT_APP_HIGHLIGHT_RELEVANT_MEMORIES=true

# =============================================================================
# Integration Settings
# =============================================================================

# Session Management
REACT_APP_MEMORY_SESSION_PERSISTENCE=true
REACT_APP_CROSS_TAB_MEMORY_SYNC=false

# User Identification
REACT_APP_USE_ANONYMOUS_USERS=false
REACT_APP_FALLBACK_USER_ID=guest_user

# Domain Detection
REACT_APP_AUTO_DETECT_DOMAIN=true
REACT_APP_DEFAULT_DOMAIN=finance

# =============================================================================
# Advanced Features (Optional)
# =============================================================================

# Semantic Search (if implemented)
REACT_APP_ENABLE_SEMANTIC_SEARCH=false
REACT_APP_SEMANTIC_SEARCH_THRESHOLD=0.7

# Memory Compression (if implemented)
REACT_APP_ENABLE_MEMORY_COMPRESSION=false
REACT_APP_COMPRESSION_THRESHOLD=1000

# Real-time Sync (if implemented)
REACT_APP_ENABLE_REAL_TIME_SYNC=false
REACT_APP_WEBSOCKET_URL=ws://localhost:8003/ws

# AI-Powered Features (if implemented)
REACT_APP_ENABLE_AUTO_TAGGING=false
REACT_APP_ENABLE_IMPORTANCE_SCORING=false
REACT_APP_ENABLE_MEMORY_SUGGESTIONS=false

